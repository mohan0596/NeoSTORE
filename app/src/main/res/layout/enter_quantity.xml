<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/product_category_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        style="@style/quantity_product_header"
        android:text="@string/Tables" />

    <ImageView
        android:id="@+id/product_img_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_category_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="@dimen/twenty_seven"
        android:layout_marginRight="@dimen/twenty_seven"
        app:srcCompat="@drawable/slider_img2" />

    <TextView
        android:id="@+id/quantity_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        style="@style/enter_quantity"
        android:text="@string/Tables"
        android:layout_below="@+id/product_img_id"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/quantity_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quantity_text_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/twenty_two"
        android:maxLength="2"
        android:background="@drawable/quantity_field"
        android:inputType="number"
       />

    <Button
        android:id="@+id/submit_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quantity_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/twenty_two"
        android:layout_marginBottom="33dp"
        style="@style/submitt"
        android:text="@string/submitt" />
</RelativeLayout>