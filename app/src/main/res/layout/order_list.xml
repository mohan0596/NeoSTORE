<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <TextView
        android:id="@+id/oreder_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        style="@style/order_style"
        android:layout_marginTop="20dp"
        android:text="@string/order_id" />

    <TextView
        android:id="@+id/ordrer_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/order_style"
        android:layout_alignBottom="@+id/oreder_text_id"
        android:layout_marginStart="2dp"
        android:layout_toEndOf="@+id/oreder_text_id"
        android:text="TextView" />
    <View
        android:layout_width="150dp"
        android:layout_height="2dp"
        android:layout_below="@+id/oreder_text_id"
        android:layout_alignStart="@+id/oreder_text_id"
        android:layout_marginTop="@dimen/ten"
        android:background="?android:attr/listDivider"
        />

    <TextView
        android:id="@+id/order_date_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        style="@style/Address_detail"
        android:text="@string/order_date"
        android:layout_below="@+id/oreder_text_id"
        android:layout_alignStart="@+id/oreder_text_id" />

    <TextView
        android:id="@+id/order_date_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="TextView"
        android:layout_marginBottom="@dimen/ten"
        android:layout_alignBaseline="@+id/order_date_text_id"
        android:layout_alignBottom="@+id/order_date_text_id"
        android:layout_toEndOf="@+id/order_date_text_id" />

    <TextView
        android:id="@+id/price_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/order_price_style"
        android:text="Rs.45"
        android:layout_above="@+id/order_date_id"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="34dp" />
</RelativeLayout>