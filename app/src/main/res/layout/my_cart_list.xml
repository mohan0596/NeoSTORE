<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="@dimen/product_width"
        android:layout_height="@dimen/product_height"
        android:id="@+id/product_img_id"
        android:scaleType="centerCrop"
        android:src="@drawable/cupboardicon"
        android:layout_marginBottom="@dimen/thirty"
        android:layout_marginTop="@dimen/terms_conditions"
        android:layout_marginLeft="@dimen/terms_conditions"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_name_id"
            android:layout_marginTop="@dimen/twelve"
            android:layout_marginLeft="@dimen/fifteen"
            style="@style/order_product_name"
            android:text="@string/Tables"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="@dimen/fifteen"
            android:textStyle="italic"
            android:id="@+id/product_category_id"
            android:text="@string/Tables"
            style="@style/order_product_category"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/thirteen"
            android:layout_marginBottom="@dimen/twenty"

            >

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/quantity_spinner_id"
                android:layout_marginLeft="@dimen/seventeen"
                android:overlapAnchor="false"
                android:dropDownVerticalOffset="50dp"
                android:dropDownHeight="match_parent"
                android:background="@drawable/spinner_field"
                />

            <TextView
                android:id="@+id/price_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/order_qty"
                android:layout_marginEnd="36dp"
                android:text="@string/price"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>