<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>



    <style name="header_name">
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/login_header_size</item>
        <item name="android:layout_marginTop">133dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Editetxt_style">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/password</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:background">@drawable/edittext_field</item>
    </style>

    <style name="login_button_style">
        <item name="android:textSize">@dimen/login_button_size</item>
        <item name="android:textColor">@color/redColor</item>
        <item name="android:background">@drawable/button_field</item>

    </style>

    <style name="forgot_pass">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/forgot_pass</item>
    </style>

    <style name="Register_toolbar">
        <item name="android:background">@color/ToolbarColor</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:titleTextColor">@color/white</item>
    </style>

    <style name="Register_title_style">
        <item name="android:textSize">@dimen/Register_logo</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Radio_button_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/no_account</item>

    </style>

    <style name="navigation_header">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/terms_conditions</item>
    </style>

    <style name="Product_name">
        <item name="android:color">@color/gray</item>
        <item name="android:textSize">@dimen/fifteen</item>
    </style>

    <style name="Product_details">
        <item name="android:color">@color/gray</item>
        <item name="android:textSize">@dimen/ten</item>
    </style>



    <style name="Address">
        <item name="android:color">@color/black</item>
        <item name="android:textSize">@dimen/seventeen</item>
    </style>

    <style name="edit_city">
        <item name="android:color">@color/black</item>
        <item name="android:textSize">@dimen/thirteen</item>
        <item name="android:ems">10</item>
        <item name="android:maxLength">20</item>
        <item name="android:background">@drawable/landmark_field</item>
    </style>
    
    <style name="save_address">
        <item name="android:textSize">@dimen/twenty_five</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/save_address</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="product_heading">
        <item name="android:textSize">@dimen/twenty</item>
        <item name="android:textColor">@color/dark_black</item>
    </style>

    <style name="product_category">
        <item name="android:textSize">@dimen/sixteen</item>
        <item name="android:textColor">@color/light_black</item>
    </style>

    <style name="product_description">
        <item name="android:textSize">@dimen/ten</item>
        <item name="android:textColor">@color/light_black</item>
    </style>

    <style name="price_style">
        <item name="android:textColor">@color/faint_red</item>
        <item name="android:textSize">@dimen/twenty</item>
    </style>

    <style name="description_style">
        <item name="android:textSize">@dimen/twelve</item>
        <item name="android:textColor">@color/description_black</item>
    </style>
    <style name="description_content_style">
        <item name="android:color">@color/black</item>
        <item name="android:textSize">@dimen/ten</item>
    </style>

    <style name="rate_style">
        <item name="android:textSize">@dimen/twenty_five</item>
        <item name="android:textColor">@color/LightGray</item>
        <item name="android:background">@drawable/rate_button_field</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Shipping_header">
        <item name="android:textSize">@dimen/twenty_two</item>
        <item name="android:textColor">@color/black</item>
    </style>




</resources>
